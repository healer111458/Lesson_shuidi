*
    margin 0
    padding 0

.weui-cell
    padding 16px
    position relative
    display flex
    align-items center
    // &::after
    //     //对上一次选择器的引用
    //     content:""
    //     position absolute
    //     bottom 0
    //     left 0
    //     right 0
    //     height 1px
    //     border-bottom 1px solid rgba(0,0,0,.1)
    //     transform scaleY(0.5)
    //     transform-origin 0 100%//基点


    &::before,&::after//对上一次选择器的引用
        content:""
        position absolute
        left 0
        right 0
        height 1px   
        transform scaleY(0.5)
    &::after
        bottom 0
        border-bottom 1px solid rgba(0,0,0,.1)
        transform-origin 0 100%
    .weui-cell__hd
        img
            width 20px
            margin-right 16px
            display block
    .weui-cell__bd        
        flex 1
    .weui-cell__ft
        text-align right
        color rgba(0,0,0,.5)